{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock",
        "--legacy-peer-deps"
      ]
    },
    "publish": {
      "allowBranch": "master",
      "ignoreChanges": [
        "*.md"
      ]
    }
  }
}